{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "noImplicitAny": false,
        "paths": {
            "@/*":["src/*"]
        },
        "baseUrl": "./"
    },
    "include": [
        "./src/**/*"
    ]
}
