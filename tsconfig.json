{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "strict": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es5",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "allowJs": true,
        "noImplicitAny": false,
        "paths": {
            "@/*":["src/*"]
        },
        "baseUrl": "./",
        "typeRoots": [
            "./node_modules/@types/",
            "./src/types/"
        ]
    },
    "include": [
        "./src/**/*",
        "./postcss.config.js",
        "./builder/**/*"
    ]
}
